@model VollyV2.Models.Volly.ContactUsModel

@{
    ViewData["Title"] = "Contact Us";
    ViewData["DarkNav"] = true;
    ViewData["BodyClass"] = "class=blend";
}
<div class="container vollytron">
    <div class="text-danger">
        @TempData["Message"]
    </div>
    <br />
    <div class="row">
        <div class="col-md-4">
            <img src="~/images/assets/teamvolly.png" />
        </div>
        <div class="col-md-8 padded">
            <ul>
                <li>
                    <h4>
                        Our vision is to increase civic engagement by making volunteering in Calgary as easy as possible.
                    </h4>
                </li>
                <li>
                    <h4>
                        Volly was started in 2018 by a group of passionate and engaged volunteers and was kickstarted at CivicTechYYC/CodeAcross Hackathon.
                    </h4>
                </li>
                <li>
                    <h4>
                        Join our team! Currently seeking Graphic Designers/Front-End Developers!
                    </h4>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 vertical-margin-auto">
            <h3>Contact Us:</h3>
            <ul>
                <li>Are you looking for volunteer opportunities in Calgary?</li>
                <li>Is there a feature you would like us to add on this page?</li>
                <li>Have a volunteer opportunity to post?</li>
                <li>Is there a volunteer initiative you are dying to participate in that we can help plan?</li>
                <li>Have a question about a particular opportunity?</li>
            </ul>
            <h4>Fill out this form and we will get back to you.</h4>
            <h4>Or reach us directly at <a href="mailto:admin@vollyapp.com">admin@vollyapp.com</a></h4>
        </div>
        <div class="col-md-6">
            <form asp-action="Contact">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="col-form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="col-form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Message" class="col-form-label"></label>
                    <textarea asp-for="Message" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
                <input style="display:none;"
                       asp-for="TripCheck" />
                <div class="form-group">
                    <input type="submit" value="Send Message" class="btn btn-default" />
                </div>
                <div class="g-recaptcha" data-sitekey="6Lf7z4gUAAAAAIywib2e-wvMztu18jDZwFTLYeXO"></div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



